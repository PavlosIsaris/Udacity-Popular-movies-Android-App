<?xml version="1.0" encoding="utf-8"?>
<!--COMPLETED (2) Change the root layout of activity_detail.xml to a FrameLayout and remove unnecessary xml attributes-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_movie_title"
                android:background="@color/movieDetailTitleBackground"
                android:textColor="@color/movieDetailTitleTextColor"
                android:paddingTop="@dimen/movie_detail_title_padding_top"
                android:paddingBottom="@dimen/movie_detail_title_padding_bottom"
                android:paddingStart="@dimen/movie_detail_title_padding_left"
                android:paddingLeft="@dimen/movie_detail_title_padding_left"
                android:elevation="8dp"
                android:textSize="35sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:layout_weight="40"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="30sp"
                    android:paddingStart="30sp"
                    android:id="@+id/iv_movie_poster_thumb"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:scaleType="fitEnd"
                    android:layout_weight="30"
                    android:layout_marginTop="15dp"
                    android:adjustViewBounds="true"
                    android:paddingStart="30sp"
                    android:paddingLeft="30sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:id="@+id/tv_movie_release_year" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_movie_user_rating"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>
            </LinearLayout >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"
                android:id="@+id/tv_movie_synopsis"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trailersTitle"
                android:layout_marginTop="20dp"
                android:paddingStart="20sp"
                android:paddingLeft="20sp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_movie_trailers"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_trailers_error_message_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/main_activity_error_msg_padding"
                android:text="@string/error_message"
                android:textSize="@dimen/main_activity_error_msg_text_size"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/pb_trailers_loading_indicator"
                android:layout_height="@dimen/main_activity_progress_bar_height"
                android:layout_width="@dimen/main_activity_progress_bar_width"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
